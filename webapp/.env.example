# XR-Swarm-Bridge Environment Configuration

# OpenAI GPT-4o Integration
REACT_APP_OPENAI_API_KEY=your_openai_api_key_here

# WebRTC Bridge Configuration
REACT_APP_WEBRTC_SERVER_URL=ws://localhost:8443
REACT_APP_WEBRTC_SERVER_SSL=false

# System Configuration
REACT_APP_MAX_AGENTS=100
REACT_APP_DEFAULT_FORMATION=line
REACT_APP_SAFETY_TIMEOUT=30000

# Development Settings
REACT_APP_DEBUG_MODE=true
REACT_APP_ENABLE_STATS=true
REACT_APP_LOG_LEVEL=info

# Production Settings (override in .env.production)
# REACT_APP_WEBRTC_SERVER_URL=wss://your-domain.com:8443
# REACT_APP_WEBRTC_SERVER_SSL=true
# REACT_APP_DEBUG_MODE=false